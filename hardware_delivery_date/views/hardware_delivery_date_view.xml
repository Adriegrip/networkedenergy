<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="product_hardware_delivery_tree" model="ir.ui.view">
            <field name="name">Hardware Delivery</field>
            <field name="model">x_producthardware</field>
            <field name="inherit_id" ref="studio_customization.default_form_view_fo_4c3b6468-2485-4c09-8af5-f0f6d25c96ed"/>
            <field name="arch" type="xml">
                <field name="x_name" position="after">
                    <field name="hardware_delivery_date">
                        <tree string="Hardware Delivery" editable="bottom">
                            <field name="start_delivery_date"/>
                            <field name="end_delivery_date"/>
                            <field name="period"/>
                            <field name="number_of_deliveries"/>
                            <field name="product_hardware"/>
                        </tree>
                    </field>
                </field>
            </field>
        </record>

        <record id="hardware_delivery_tree" model="ir.ui.view">
            <field name="name">Hardware Delivery</field>
            <field name="model">hardware.delivery</field>
            <field name="arch" type="xml">
                <tree string="Hardware Delivery" editable="bottom">
                    <field name="start_delivery_date"/>
                    <field name="end_delivery_date"/>
                    <field name="period"/>
                    <field name="number_of_deliveries"/>
                    <field name="product_hardware"/>
                </tree>
            </field>
        </record>

        <record id="hardware_delivery_action" model="ir.actions.act_window">
            <field name="name">Hardware Delivery</field>
            <field name="res_model">hardware.delivery</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create The First Allocation
                </p>
            </field>
        </record>

        <menuitem
            name="Hardware Delivery" id="hardware_delivery_menu"
            parent="crm.crm_menu_config"
            action="hardware_delivery_action"
        />

    </data>
</odoo>